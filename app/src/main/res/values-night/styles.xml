<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LabelTextStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ValueTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/theme_dark_value_text</item>
    </style>

    <style name="DescriptionTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DoubleEffectivenessStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/theme_dark_double_effective</item>
    </style>

    <style name="SpeedStatTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/theme_dark_speed_stat</item>
    </style>

    <style name="DefStatStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/theme_dark_def_stat</item>
    </style>

    <style name="AtkStatStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/theme_dark_atk_stat</item>
    </style>

</resources>