<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="-45"
                android:endColor="#808080"
                android:startColor="#D3D3D3" />
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="?android:attr/textColorPrimary" />
            <padding android:left="15dp" android:bottom="10dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/types_button_image"
        android:width="100dp"
        android:height="100dp"
        android:gravity="right"
        android:right="-25dp"/>
</layer-list>